    <input type="text" asp-for="Subject" />
    <span asp-validation-for="Subject"></span>
    <br />
    <label asp-for="UserMessage"> Message:</label>
    <textarea rows="4" asp-for="UserMessage"></textarea>
    <input type="submit" value="Send Message" />
    <span asp-validation-for="UserMessage"></span>
    <br />
</form>
